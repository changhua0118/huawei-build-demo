    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "rootDir": "./source",
        "outDir": "./dist",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
    }
}
